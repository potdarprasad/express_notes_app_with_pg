<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
</head>

<body>
    <div class="container-fluid">
        <h2 class="text-center text-info mt-5">Notes</h2>
        <div class="row">
            <div class="text-end">
                <a href="/notes/create" class="btn btn-success">+ Add Note</a>
            </div>
        </div>
        <div class="row mt-5">
            <div class=" mx-auto">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                        <tr class="table-dark text-white">
                            <th>#</th>
                            <th>Note</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(let index in notes){%>
                            <tr>
                                <td><%- parseInt(index)+ 1%></td>
                                <td><%- notes[index].note%></td>
                                <td>
                                    <a class="btn btn-warning" href="/notes/edit/<%-notes[index].id%>">Edit</a>
                                    <a class="btn btn-danger" href="/notes/delete/<%-notes[index].id%>">Delete</a>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>